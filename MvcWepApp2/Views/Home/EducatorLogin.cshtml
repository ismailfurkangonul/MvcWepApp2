@{
    Layout = null;
}
@{
    ViewBag.Title = "EducatorLogin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>TeacherLogin</h2>
<html>

<head>
    <title>Login</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>

<body>
    <div class="container">
        <div class="row">
            <h2>EĞİTMEN GİRİŞİ</h2>


            @using (Html.BeginForm("EducatorLogin", "Home", FormMethod.Post))
            {
        <div class="col-md-offset-6">
            <div class="form-group">
                <label>Kullanıcı Adı</label>
                <input type="text" name="kullaniciAdi" class="form-control" />
            </div>
            <div class="form-group">
                <label>Şifre</label>
                <input type="password" name="sifre" class="form-control" />
            </div>
            <button class="btn btn-primary">GİRİŞ YAP</button>
            <a href="/Home/Index/" class="btn btn-login">Yönetici Girişine Git</a>
        </div>
            }


        </div>
    </div>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")

</body>
</html>